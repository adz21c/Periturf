<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/adz21c/Periturf</PackageProjectUrl>
    <RepositoryUrl>https://github.com/adz21c/Periturf</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>test;testing</PackageTags>
    <Authors>adz21c</Authors>
  </PropertyGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>Periturf.ruleset</CodeAnalysisRuleSet>
    <!--<WarningsAsErrors>NU1605;CS1591;CS8618;CS8625;CS8604</WarningsAsErrors>-->
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Verify\Evaluators\**" />
    <EmbeddedResource Remove="Verify\Evaluators\**" />
    <None Remove="Verify\Evaluators\**" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>Periturf.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
